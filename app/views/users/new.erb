<h1>Sign up</h1>

<div class="container">
  <div class="row ">
    <div class="new_form col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
      <% if @message %>
      <div class="error-message"><%= @message %></div>
      <% end %>
        
        <form class="form-group" method="post" action="/users">
        
        <div>
          <label>Username:</label>   
          <input type="text" class="form-control" name="username">
        </div>

        <div> 
          <label>Password:</label>
          <input type="password"  class="form-control" name="password">
        </div>
        <div>
          <input type="submit" class="add-new salesubmit btn btn-primary" value="Register">
        </div>
      </form>
    </div>
  </div>
</div>