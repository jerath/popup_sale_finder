<h1 >Login</h1>

<div class="container">
  <div class="row ">
    <div class="new_form col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
      <% if @message %>
      <div class="error-message"><%= @message %></div>
      <% end %>
        
      <form data-toggle="validator" role="form" class="form-group" method="post" action="/session">        
        <div>
          <label>Username:</label>   
          <input type="text" class="form-control" name="username" required>
        </div>

        <div> 
          <label>Password:</label>
          <input type="password" minlength="3" class="form-control" name="password" required>
        </div>
        <div>
          <input type="submit" class="add-new salesubmit btn btn-primary" value="Login">
        </div>
      </form>

      <a href="/users/new"> New user? Sign up here. </a>

    </div>
  </div>
</div>